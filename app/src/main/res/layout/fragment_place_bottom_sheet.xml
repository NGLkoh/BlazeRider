<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <!-- Close Button -->
    <ImageView
        android:id="@+id/close_button"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_close"
        android:contentDescription="Close"
        app:tint="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Place Name -->
    <TextView
        android:id="@+id/place_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_regular"
        android:text="Tanza Hospital"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/close_button"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Place Address -->
    <TextView
        android:id="@+id/place_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_regular"
        android:text="Tanza, Cavite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/close_button"
        app:layout_constraintTop_toBottomOf="@id/place_name" />

    <!-- Add Destination Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/add_destination_button"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Add destination"
        android:textSize="16sp"
        android:fontFamily="@font/poppins_regular"
        app:backgroundTint="@color/red_orange"
        android:textColor="@android:color/white"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/place_address" />

    <!-- Set as Start Location Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/set_start_button"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Set as start location"
        android:textSize="16sp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/red_orange"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_destination_button" />

    <!-- Share Ride Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/share_ride_button"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Share ride"
        android:textSize="16sp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/red_orange"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/set_start_button" />

</androidx.constraintlayout.widget.ConstraintLayout>